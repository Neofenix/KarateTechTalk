pipeline {

    agent { label "master" }

    parameters {
        choice(
                choices: ['dev', 'preprod'],
                description: 'Choose an environment please',
                name: 'Environment'
        )
    }

    stages {
      dir('KarateTechTalk') {
			stage('Maven build') {
				steps {
					sh "mvn clean"
				}
			}
		}	
		dir('KarateTechTalk') {
			stage('test') {
				steps {
					script {
						sh "mvn test -Denv=${params.Environment}"
					}
				}
			}
        }
		dir('KarateTechTalk') {
			stage('generate reports') {
				steps {
					cucumber buildStatus: "UNSTABLE",
					fileIncludePattern: "**/*.json",
					jsonReportDirectory: "target"
				}
			}
        }
    }

}

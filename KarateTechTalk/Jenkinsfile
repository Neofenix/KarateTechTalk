pipeline {

    agent { label "master" }


    parameters {
        choice(
                choices: ['dev', 'preprod'],
                description: 'Choose an environment please',
                name: 'Environment'
        )
    }

    stages {

        stage('Maven build') {
            steps {
			    dir('KarateTechTalk') {
					sh "mvn clean"
				}
            }
        }
        stage('test') {
            steps {
			    dir('KarateTechTalk') {
					script {
						sh "mvn test -Denv=${params.Environment}"
					}
				}
			}
		}
        stage('generate reports') {
            steps {
			    dir('KarateTechTalk/target') {
					cucumber buildStatus: "UNSTABLE",
					fileIncludePattern: "**/*.json",
					jsonReportDirectory: "target/surefire-reports"
				}
			}
		}
    }

}
